        "indexed_chars": {
          "type": "long",
          "store": true
        },
        "filename": {
          "type": "string",
          "store": true,
          "index": "not_analyzed"
        },
        "extension": {
          "type": "string",
          "store": true,
          "index": "not_analyzed"
        },
        "checksum": {
          "type": "string",
          "store": true,
          "index": "not_analyzed"
        },
        "url": {
